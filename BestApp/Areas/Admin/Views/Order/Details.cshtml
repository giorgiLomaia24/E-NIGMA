<form method="post">
    <input asp-for="@Model.OrderHeader.Id" hidden type="text">
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1">
                        <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right">
                        <a asp-action="Index" asp-controller="Order" asp-area="Admin" class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.Name" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.Name" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.Name" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.PhoneNumber" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.PhoneNumber" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.PhoneNumber" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.StreetAddress" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.StreetAddress" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.StreetAddress" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.City" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.City" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.City" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.State" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.State" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.State" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Zip Code</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.PostalCode" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.PostalCode" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.PostalCode" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.ApplicationUser.Email" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.ApplicationUser.Email" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.ApplicationUser.Email" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.OrderDate" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.OrderDate" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.OrderDate" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.Carrier" type="text" class="form-control" id="carrierInput" />
                                      <span asp-validation-for="@Model.OrderHeader.Carrier" class="text-danger"></span> 

                                    }else{
                                     <input asp-for="@Model.OrderHeader.Carrier" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.TrackingNumber" type="text" class="form-control"  id="trackingInput"/>
                                      <span asp-validation-for="@Model.OrderHeader.TrackingNumber" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.TrackingNumber" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.ShippingDate" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.ShippingDate" class="text-danger"></span> 

                                    }else{
                                     <input asp-for="@Model.OrderHeader.ShippingDate" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Session ID</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.SessionId" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.SessionId" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.SessionId" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Intent ID</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.PaymentIntentId" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.PaymentIntentId" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.PaymentIntentId" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">

                                <div class="col-3">Payment Due Date</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.PaymentDueDate" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.PaymentDueDate" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.PaymentDueDate" readonly type="text" class="form-control" />
                                    }
                                </div>

                                <div class="col-3">Payment Date</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.PaymentDate" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.PaymentDate" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.PaymentDate" readonly type="text" class="form-control" />
                                    }
                                </div>

                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Status</div>
                                <div class="col-9">
                                     @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.StatusEmployy)){
                                      <input asp-for="@Model.OrderHeader.PaymentStatus" type="text" class="form-control" />
                                      <span asp-validation-for="@Model.OrderHeader.PaymentStatus" class="text-danger"></span> 
                                    }else{
                                     <input asp-for="@Model.OrderHeader.PaymentStatus" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <button asp-action="UpdateOrderDetails"  type="submit" class="btn btn-warning form-control my-1"  >Update Order Details</button>

                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Summary</span>
                            </h4>
                            <label class="btn btn-outline-primary form-control my-2">Order Status - @Model.OrderHeader.OrderStatus</label>

                            <ul class="list-group mb-3">

                              
                                        @foreach (var item in Model.OrderDetails)
                                        {
                                              <li class="list-group-item d-flex justify-content-between p-2">
                                    <div class="row container">

                                            <div class="col-8">
                                            <h6 class="my-0 text-primary">@item.Product.Title</h6>
                                            <small class="text-muted">Price : $$$</small><br />
                                            <small class="text-muted">Quantity : XX</small>
                                        </div>
                                            <div class="col-4 text-end">
                                            <p class="text-success">@item.Count * @item.Price</p>
                                        </div>
                                           </div>
                                </li>
                                        }
                                 

                                <li class="list-group-item bg-primary">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL </h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">$@Model.OrderHeader.OrderTotal</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            @if(Model.OrderHeader.PaymentStatus == SD.PaymentStatusDelayedPayment && Model.OrderHeader.OrderStatus == SD.StatusShipped ){
                            <button type="submit" class="btn btn-success form-control my-1" >Pay Now</button>
                            }
                            @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employy))
                            {
                                 @if( Model.OrderHeader.OrderStatus == SD.StatusApproved )
                                 {
                                 <button type="submit" asp-action="StartProcessing" asp-controller="Order"  class="btn btn-primary form-control my-1"  >Start Processing</button>
                                 }
                                 @if( Model.OrderHeader.OrderStatus == SD.StatusInProcess )
                                 {
                                <button type="submit" id="ship"  asp-action="StartShipping"  class="btn btn-primary form-control my-1"  >Ship Order</button>

                                 }@if( Model.OrderHeader.OrderStatus != SD.StatusRefunded && Model.OrderHeader.OrderStatus != SD.StatusCancelled && Model.OrderHeader.OrderStatus != SD.StatusShipped )
                                 {
                                <button asp-action="CancelOrder" type="submit" class="btn btn-danger form-control my-1"  >Cancel Order</button>

                                 }

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



@section Scripts {
  <script>
    document.addEventListener('DOMContentLoaded', function() {
        const shipBtn = document.getElementById("ship");
        const carrierInput = document.getElementById("carrierInput");
        const trackingInput = document.getElementById("trackingInput");
        const warnForCarrierAndTracking = document.getElementById('myWarning');
        const myWarningDiv = document.getElementById('myWarningDiv');
        const closealertBtn = document.getElementById('xBtn');

        shipBtn.addEventListener('click', function(event) {
            if (carrierInput.value.trim() === "" || trackingInput.value.trim() === "") {
                event.preventDefault(); // Prevent the default action of the button (e.g., form submission)
                warnForCarrierAndTracking.innerText = "Please fill in both Carrier and Tracking information.";
                warnForCarrierAndTracking.style.display = "block";
                myWarningDiv.style.display = "block"
            }
        });

        closealertBtn.addEventListener('click',function(){
            myWarningDiv.style.display = 'none'
        })
    });
</script>

   

}