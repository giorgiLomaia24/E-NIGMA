@model Best.Models.ViewModels.OrderVm

      <div class="alert alert-dismissible alert-warning" id="myWarningDiv" style="display: none;">
          <button type="button" class="btn-close" id="xBtn"></button>

  <h6 id="myWarning" style="display: none;"></h6>
   </div>

 @if(TempData["statussuc"] != null){
        
        <div class="alert alert-dismissible alert-success">
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  <h6>@TempData["statussuc"]</h6>
   </div>
